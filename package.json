{
  "name": "tedy",
  "version": "0.0.2-beta",
  "description": "Your sweet Terminal Editor pal",
  "source": "src/index.tsx",
  "main": "dist/index.js",
  "bin": "index.mjs",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "tsx src/index.tsx",
    "build": "tsup src/index.tsx --format esm --minify --clean",
    "watch": "tsup src/index.tsx --format esm --minify --clean --watch src",
    "format": "deno fmt --ignore=dist && deno lint --ignore=dist",
    "prebuild": "patch-package && tsx patch/ink.ts"
  },
  "author": {
    "name": "Jeroen Peeters",
    "email": "contact@jeroenpeeters.be"
  },
  "license": "MIT",
  "dependencies": {
    "cli-cursor": "^4.0.0",
    "cli-highlight": "^2.1.11",
    "ink": "^4.3.1",
    "react": "^18.2.0",
    "term-size": "^3.0.2",
    "tslib": "^2.6.1"
  },
  "devDependencies": {
    "@jeroenpeeters/tsconfig": "^1.1.0",
    "@types/node": "^20.5.0",
    "@types/react": "^18.2.20",
    "patch-package": "^8.0.0",
    "tsup": "^7.2.0",
    "tsx": "^3.12.7",
    "type-fest": "^4.2.0",
    "typescript": "^5.1.6"
  }
}
